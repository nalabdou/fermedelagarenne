---
import { getCollection } from "astro:content";

import Layout from "@/layouts/Layout.astro";
import SocialLinks from "@/components/SocialLinks.astro";
import PostCard from "@/components/PostCard.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import Link from "@/components/shared/Link.astro";
import convertAsteriskToStrongTag from "@/utils/convertAsteriskToStrongTag";

import presentation from "@/data/presentation";
import projects from "@/data/projects";

const posts = await getCollection("posts");
---

<Layout>
  <main class="flex flex-col">
    <div
      class="container flex flex-col my-4 mx-auto lg:flex-row lg:items-center"
    >
      <div class="w-full text-center">
        <h1
          class="text-2xl font-bold tracking-wide text-gray-800 dark:text-white lg:text-4xl"
        >
          Bienvenue à la Ferme de la Garenne
        </h1>
      </div>
    </div>
    <div
      class="container flex flex-col px-6 mx-auto lg:h-[32rem] lg:flex-row lg:items-center"
    >
      <div class="flex items-center justify-center w-full h-96 lg:w-1/2 mr-3">
        <img
          class="object-cover w-full h-full mx-auto rounded-md lg:max-w-2xl"
          src="http://www.fermedelagarenne.fr/public/2020-12/Etal%20magasin.jpg"
          alt="glasses photo"
        />
      </div>
      <div class="w-full lg:w-1/2 mt-5 md:mt-0">
        <div class="">
          <div class="space-y-5 ml-6">
            <h4
              class="flex items-center -mx-2 text-gray-700 dark:text-gray-200"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-8 h-8 mx-2 text-green-500"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>

              <span class="mx-2">
                <a
                  class="underline decoration-green-500 decoration-2 underline-offset-4"
                  href="/magasin">Visitez notre boutique! Dès maintenant</a
                >
              </span>
            </h4>

            <h4
              class="flex items-center -mx-2 text-gray-700 dark:text-gray-200"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-8 h-8 mx-2 text-green-500"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>

              <span class="mx-2">Pré-commandez vos produits</span>
            </h4>

            <h4
              class="flex items-center -mx-2 text-gray-700 dark:text-gray-200"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-8 h-8 mx-2 text-green-500"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>

              <span class="mx-2">Venez les retirer en magasin</span>
            </h4>

            <p class="text-lg">
              Sur place, vous pourrez faire le plein de légumes frais et de
              saison,et découvrir notre gamme de produits laitiers préparés à la
              ferme (crèmes glacées, fromages, beurre).
            </p>
          </div>
        </div>
      </div>
    </div>
    <div
      class="container flex flex-col my-4 mx-auto lg:flex-row lg:items-center"
    >
      <div class="w-full text-center">
        <h2
          class="text-lg font-bold tracking-wide text-gray-800 dark:text-white lg:text-3xl"
        >
          Horaires d'ouverture
        </h2>
        <h4
          class="flex items-center -mx-2 text-gray-700 dark:text-gray-200 mt-2"
        >
          <svg
            class="w-6 h-6 mx-2 text-green-500"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
